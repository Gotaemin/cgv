<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE mapper
PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.tm.cgv.member.MemberRepository">

	<resultMap type="MemberVO" id="memberMap">
		<id property="num" column="num"/>
		<result property="uid" column="uid"/>
		<result property="pwd" column="pwd"/>
		<result property="name" column="name"/>
		<result property="birth" column="birth"/>
		<result property="phone" column="phone"/>
		<result property="email" column="email"/>
		<result property="gender" column="gender"/>
		<result property="age" column="age"/>
		<result property="nick" column="nick"/>
		<result property="fileName" column="fileName"/>
		<result property="enable" column="enable"/>
		
		<collection property="authVOs" javaType="List" ofType="AuthVO">
			<result column="memberNum" property="memberNum"/>
			<result column="auth" property="auth"/>
		</collection>
	</resultMap>

	<select id="read" parameterType="MemberVO" resultMap="memberMap">
		SELECT * FROM 
		(SELECT * FROM member) M
		LEFT OUTER JOIN 
		(SELECT * FROM auth) A
		ON(M.num = A.memberNum);
	</select>

	<insert id="memberJoin" parameterType="MemberVO">
		insert into member values(0,#{id},#{pwd},#{name},#{birth},#{phone},#{email},null,null,null)
	</insert>
	
	<select id="memberLogin" parameterType="MemberVO" resultType="MemberVO">
		select * from member where id=#{id} and pwd=#{pwd} and deleteAt is null
	</select>
	
	<select id="memberIdCheck" parameterType="String" resultType="MemberVO">
		select id from member where id=#{id} and deleteAt is null
	</select>
	
	<select id="memberSelect" parameterType="MemberVO" resultType="MemberVO">
		select * from member where id=#{id}
	</select>
	
	<select id="naverMemberCheck" parameterType="MemberVO" resultType="MemberVO">
		select * from member where id=#{id} and email=#{email} and name=#{name}
	</select>
	
	<update id="memberUpdate" parameterType="MemberVO">
		update member set pwd=#{pwd},name=#{name},birth=#{birth},phone=#{phone},email=#{email} where id=#{id}
	</update>
	
	<update id="memberDelete" parameterType="MemberVO">
		update member set deleteAt = sysdate() where id=#{id}
	</update>
	
</mapper>