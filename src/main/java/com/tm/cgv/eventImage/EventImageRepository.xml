<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.tm.cgv.eventImage.EventImageRepository">
	<insert id="insertImage" parameterType="EventImageVO">
		insert into eventImage (eventNum, fileName, originName, type)
		values (#{eventNum}, #{fileName}, #{originName}, #{type})
	</insert>
	
<!-- 	<delete id="deleteImage" parameterType="Integer">
		delete from eventImage where num=#{num}
	</delete> -->
	
	<update id="updateImage" parameterType="EventImageVO">
		update eventImage set fileName=#{fileName}, originName=#{originName}
		where num=#{num}
	</update>
	
	<select id="selectImage" parameterType="Integer" resultType="EventImageVO">
		select * from eventImage where num=#{num}
	</select>
</mapper>