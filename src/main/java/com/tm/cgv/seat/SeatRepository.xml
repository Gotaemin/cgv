<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.tm.cgv.seat.SeatRepository">
 	<insert id="seatInsert" parameterType="SeatVO">
		insert into seat (theaterNum, `row`, col, grade)
		values(#{theaterNum},#{row},#{col},#{grade})
	</insert>
	
	<select id="theaterSelect" resultType="Integer">
		select max(num) from theater;
	</select>
	
	<insert id="seatSpaceInsert" parameterType="SeatSpaceVO">
		insert into seatSpace values (0, #{theaterNum}, #{rowOrCol}, #{index})
	</insert>
</mapper>