<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE mapper
PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.tm.cgv.guest.GuestRepository">

	<insert id="guestInsert" parameterType="GuestVO">
		insert into guest values(#{reservationNum},#{birth},#{phone},#{pwd})
	</insert>

	<select id="guestReservationCheck" parameterType="GuestVO" resultType="GuestVO">
		select * from guest where birth=#{birth} and phone=#{phone} and pwd=#{pwd}
	</select>
	
	<select id="guestFindPwd" parameterType="GuestVO" resultType="GuestVO">
		select pwd from guest where birth=#{birth} and phone=#{phone}
	</select>
	
	<delete id="guestDelete" parameterType="Integer">
		delete from guest where reservationNum=#{reservationNum}
	</delete>

</mapper>