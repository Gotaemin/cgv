<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
  
<mapper namespace="com.tm.cgv.movieImage.MovieImageRepository">

	<select id="movieImageList" parameterType="MovieImageVO" resultType="MovieImageVO" >
		select * from movieImage where movieNum=#{movieNum}
	</select>

	<insert id="movieImageInsert" parameterType="MovieImageVO" useGeneratedKeys="true" keyProperty="num">
		insert into movieImage(num,movieNum,fileName,originName,type) values (0,#{movieNum},#{fileName},#{originName},#{type})
	</insert>
	
	<select id="movieImageSelect" parameterType="Integer" resultType="MovieImageVO">
		select * from movieImage where num=#{num}
	</select>
	
	<delete id="movieImageDelete" parameterType="MovieImageVO">
		delete from movieImage where num=#{num}
	</delete>
	
	<update id="movieImageUpdat" parameterType="MovieImageVO">
		update movieImage set fileName=#{fileName}, originName=#{originName}
		where num=#{num}
	</update>

</mapper>