<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE mapper
PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.tm.cgv.point.PointRepository">
	
	<select id="pointSelectList" parameterType="String" resultType="PointVO">
		select * from point where username=#{username}
	</select>
	
	<select id="getCjPoint" parameterType="PointVO" resultType="Integer">
		SELECT SUM(price) FROM point WHERE type = 'cjOnePointipt' AND username = #{username}; 
	</select>	
	
	<update id="pointDiscountUpdate" parameterType="PointVO" >
		update point set
		<choose>
			<when test="kind == 'sum'">
				price=price + #{price}
			</when>
			<otherwise>
				price=price - #{price}			
			</otherwise>
		</choose>
		where username=#{username} and type=#{type}
	</update>

	<insert id="pointInsert" parameterType="PointVO">
		insert into point values(0,#{username},#{price},#{type})
	</insert>

</mapper>