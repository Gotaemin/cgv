<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE mapper
PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.tm.cgv.board.bbs.BbsRepository">

	<insert id="boardInsert" parameterType="BbsVO">
		insert into bbs values(0,#{title},#{writer},#{contents},sysdate(),0)
	</insert>


	<select id="boardList" parameterType="Pager" resultType="BbsVO">
		select * from bbs where 
		<choose>
			<when test="kind == 'writer'">
				writer
			</when>
			<when test="kind == 'contents'">
				contents
			</when>
			<otherwise>
				title
			</otherwise>
		</choose>
		like concat('%',#{search},'%') 
		order by hireDate desc
		limit #{startRow},#{perPage}
	</select>
	
	<select id="totalCount" parameterType="Pager" resultType="Long">
		select count(num) from bbs where
		<choose>
			<when test="kind == 'writer'">
				writer
			</when>
			<when test="kind == 'contents'">
				contents
			</when>
			<otherwise>
				title
			</otherwise>
		</choose>
		like concat('%',#{search},'%') 
	</select>
	
</mapper>